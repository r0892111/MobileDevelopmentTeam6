{
  "name": "jolt-server",
  "version": "1.0.0",
  "main": "app/app.ts",
  "scripts": {
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,html,css,md}'",
    "format:fix": "prettier --write '**/*.{js,jsx,ts,tsx,json,html,css,md}'",
    "typescript:check": "tsc --noEmit",
    "test:all": "npm run typescript:check && npm run format:check && npm run format:check",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register app/app.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.1.1",
